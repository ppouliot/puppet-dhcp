# BEGIN DHCP Failover
failover peer "dhcp-failover" {
        <%= @role %>;
        address <%= @address %>;
# Removing Port Statement for Centos 7 
#        port <%= @port %>;
        peer address <%= @peer_address %>;
# Removing Peer Port Statement for Centos 7 
#        peer port <%= @port %>;
        max-response-delay <%= @max_response_delay %>;
        max-unacked-updates <%= @max_unacked_updates %>;
        load balance max seconds <%= @load_balance %>;
<% if @role == "primary" -%>
        mclt <%= @mclt %>;
        split <%= @load_split %>;
<% end -%>
}
# END DHCP Failover
